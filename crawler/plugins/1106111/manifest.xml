<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Widgitized Profile</name>
	<author>Ben Potter</author>
	<version>Air</version>
	<description>This plugin makes the profile only consist of widgets and adds widgets such as avatar, details, and profile menu.</description>
	<website>http://speedysnail6.com</website>
	<copyright>(C) Speedysnail6 2012</copyright>
	<license>GNU Public License version 2</license>
 
	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>
	
	<requires>
    		<type>priority</type>
    		<priority>after</priority>
    		<plugin>profile</plugin>
	</requires>
	
	<screenshot>
		<description>The profile</description>
		<path>screenshots/widgitized_profile_1.png</path>
	</screenshot>
	
	<screenshot>
		<description>The new widgets added</description>
		<path>screenshots/widgitized_profile_2.png</path>
	</screenshot>

</plugin_manifest>