<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Body Background</name>
	<author>Alois Leitner</author>
	<version>1.8-12.01.27</version>
	<category>PHLOOR</category>
	<blurb>Enables custom background settings on your Elgg site. </blurb>
	<description>This plugin enables Administrators to change Elggs css background settings - this includes
	uploading a background image or changing the background color. </description>
	<website>http://phloor.13net.at</website>
	<copyright>See COPYRIGHT.txt</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>
	<activate_on_install>false</activate_on_install>
	<admin_interface>simple</admin_interface>
	
	<screenshot>
		<description>Phloor Body Background</description>
		<path>screenshots/screenshot.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Body Background - Admin Settings</description>
		<path>screenshots/screenshot-0.png</path>
	</screenshot>
		
	<requires>	
		<type>plugin</type>
		<name>phloor</name>
		<version>1.8</version>
	</requires>
	
	<requires>	
		<type>priority</type>
		<plugin>phloor</plugin>
		<priority>after</priority>
	</requires>
	
</plugin_manifest>