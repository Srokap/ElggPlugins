<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Redirect</name>
	<author>Alois Leitner</author>
	<version>1.8-12.05.04b</version>
	<category>PHLOOR</category>
	<category>menu</category>
	<category>admin</category>
	<blurb>Redirect management for your Elgg site. </blurb>
	<description>
	Enables creating and managing 'Redirect' entities by administrators.
	One can define a source and a target url. If the source url matches with
	one of the entities a user will be redirected to the target url accordingly.
	</description>
	<website>http://phloor.13net.at</website>
	<copyright>See COPYRIGHT.txt</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>
	<activate_on_install>false</activate_on_install>
	<admin_interface>simple</admin_interface>
	
	<screenshot>
		<description>Phloor Redirect [1]</description>
		<path>screenshots/screenshot.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Redirect [2]</description>
		<path>screenshots/screenshot-1.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Redirect [3]</description>
		<path>screenshots/screenshot-2.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Redirect [4]</description>
		<path>screenshots/screenshot-3.png</path>
	</screenshot>

	<requires>	
		<type>plugin</type>
		<name>phloor</name>
		<version>1.8</version>
	</requires>
	
	<requires>	
		<type>priority</type>
		<plugin>phloor</plugin>
		<priority>after</priority>
	</requires>


</plugin_manifest>