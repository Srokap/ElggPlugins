<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>phloorMenuManager</name>
	<author>Alois Leitner</author>
	<version>1.8-12.01.12</version>
	<category>PHLOOR</category>
	<category>menu</category>
	<description>Menu Manager lets you manage and style menus on your Elgg site. </description>
	<blurb>
	This is a dependecny plugin for other menu related plugins.
	Required plugins are: Menuitem for 1.8 and Menu Sooperfish for 1.8
	</blurb>
	<website>http://phloor.13net.at</website>
	<copyright>See COPYRIGHT.txt</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>
	<activate_on_install>false</activate_on_install>
	<admin_interface>simple</admin_interface>
	
	<screenshot>
		<description>Phloor Menu Manager - Menu Sooperfish for 1.8 - Settings [1]</description>
		<path>screenshots/screenshot.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Menu Manager - Menuitem for 1.8 - Settings [2]</description>
		<path>screenshots/screenshot-0.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Menu Manager - Menu Sooperfish for 1.8 [3]</description>
		<path>screenshots/screenshot-1.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Menu Manager - Menuitem for 1.8 - Create Form [4]</description>
		<path>screenshots/screenshot-2.png</path>
	</screenshot>
	
	<screenshot>
		<description>Phloor Menu Manager - Plugin Information [5]</description>
		<path>screenshots/screenshot-3.png</path>
	</screenshot>
	
	<requires>	
		<type>plugin</type>
		<name>phloor_menuitem</name>
		<version>1.8</version>
	</requires>
	
	<suggests>	
		<type>plugin</type>
		<name>phloor_menu_sooperfish</name>
		<version>1.8</version>
	</suggests>
	
	<suggests>	
		<type>plugin</type>
		<name>phloor_menu_sooperfish_theme5</name>
		<version>1.8</version>
	</suggests>	
		
	<suggests>
